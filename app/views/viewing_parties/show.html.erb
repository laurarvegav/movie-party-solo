<h1>Viewing Party </h1>

<%= button_to "Discover Page", user_discover_index_path(@user.id), method: :get %>

<h3>Buy the movie here:</h3>
<% @facade.find_movie_providers[:buy].each do |provider_name, logo_path| %>
  <%= image_tag(logo_path) %> 
  <%= provider_name %>
<% end %>

<h3>Rent the movie here:</h3>
<% @facade.find_movie_providers[:rent].each do |provider_name, logo_path| %>
  <%= image_tag(logo_path) %><br> 
  <%= provider_name %>
<% end %>

<footer>Buy/Rent data provided by JustWatch</footer>