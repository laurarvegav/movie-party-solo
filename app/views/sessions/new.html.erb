<%= form_with url: login_path, method: :post do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
   <%= f.label :location %>
  <%= f.text_field :location, value: "#{cookies.encrypted[:location]}" %><br>
  <%= f.label :password %>
  <%= f.text_field :password %><br>

  <%= f.submit 'Log in' %>
<% end %>